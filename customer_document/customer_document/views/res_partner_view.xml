<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_sale_order']" position="before">
                <button name="action_customer_document" icon="fa-list" type="object" class="oe_stat_button" attrs="{'invisible':[('customer_record_count','=',0)]}">
                    <field name="customer_record_count" string="Customer Record" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
 