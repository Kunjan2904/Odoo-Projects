<odoo>
    <data noupdate='1'>
    	<record id="ir_cron_scheduler_expiry_date" model="ir.cron">
            <field name="name">Change State to Expiry</field>
            <field name="model_id" ref="customer_document.model_customer_document" />
            <field name="state">code</field>
            <field name="code">model._cron_change_state_to_expire(),model._convert_utc_to_ist()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now(pytz.utc) + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>