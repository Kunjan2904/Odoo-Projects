<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="search_customer_wizard_form_view" model="ir.ui.view">
		<field name="name">search.customer.wizard.form.view</field>
		<field name="model">search.customer.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="customer_id"/>
						<field name="mobile"/>
						<field name="phone"/>
					</group>
				</group>

				<footer>
					<button name="action_search_customer" string="Search Customer" type="object" class="btn btn-primary"/>
					<button string="Cancel" special="cancel" class="btn btn-secondary"/>
					<button name="print_customer_detail" string="Print Customer" type="object" class="btn btn-primary"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="search_customer_update_action" model="ir.actions.act_window">
		<field name="name">Search Customer</field>
		<field name="res_model">search.customer.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem id="menu_search_customer_wizard" name="Search Customer" action="sale_order_discount.search_customer_update_action" parent="menu_search_customer"/>

</odoo>
