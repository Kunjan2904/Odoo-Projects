<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="sale_order_history_wizard_form_view" model="ir.ui.view">
		<field name="name">sale.order.history.wizard.form.view</field>
		<field name="model">sale.order.history.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="product_id"/>
					</group>
				</group>

				<footer>
					<button string="Show History" type="object" name="action_show_history"
						class="oe_highlight"/>
					<button string="Cancel" special="cancel" class="btn btn-secondary"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="sale_order_wizard_tree_view" model="ir.ui.view">
        <field name="name">sale.order.history.wizard.tree.view</field>
        <field name="model">sale.order.history.wizard</field>
        <field name="arch" type="xml">
            <tree create="false" export_xlsx="0">
                <header>
                    <button name="delete_wizard" type="object" string="Delete"/>
                </header>
                <field name="name_id"/>
                <field name="product_id"/>
                <field name="unit_price"/>
                <field name="quantity"/>
                <field name="total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

	<record id="sale_order_history_wizard_action" model="ir.actions.act_window">
		<field name="name">Sale Order History Wizard</field>
		<field name="res_model">sale.order.history.wizard</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="practice_module.sale_order_history_wizard_form_view"/>
		<field name="target">new</field>
		<field name="binding_model_id" ref="model_sale_order_line"/>
		<field name="binding_view_types">list,form</field>
	</record>

</odoo>