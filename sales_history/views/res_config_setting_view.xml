<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div class="row mt16 o_settings_container" name="quotation_order_setting_container">
                <div class="col-12 col-lg-6 o_setting_box" id="show_sale_order_history">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Show History of Order</span>
                        <div class="text-muted">
                            This Filed Is Show Sale Order History
                        </div>
                        <div class="text-muted">
                            <field name="state"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>

