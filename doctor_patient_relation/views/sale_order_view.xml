<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="string">Doctor</attribute>
                <attribute name="domain">[('is_doctor','=',True)]</attribute>
                <attribute name="context">{'default_is_doctor':True}</attribute>
            </xpath>
            
            <field name="partner_id" position="after">
                <field name="patient_id" required="True" context="{'default_is_patient':True}"/>
            </field>

            <xpath expr="//tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('is_medicine','=',True)]</attribute>
                <attribute name="context">{'default_is_medicine':True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
 