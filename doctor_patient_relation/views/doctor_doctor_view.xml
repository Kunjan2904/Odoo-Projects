<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="doctor_tree_view" model="ir.ui.view" >
		<field name="name">doctor.doctor.tree.view</field> 
		<field name="model">doctor.doctor</field> 
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="country_id"/>
				<field name="city"/>
				<field name="state_id"/>
				<field name="phone"/>
				<field name="email"/>
			</tree>
		</field>
	</record>
	
	<record id="doctor_form_view" model="ir.ui.view">
		<field name="name">doctor.doctor.form.view</field>
		<field name="model">doctor.doctor</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name" string="Doctor Name"/>
							<field name="category_id"/>
							<field name="country_id"/>
							<field name="city"/>
						</group>
						<group>
							<field name="is_doctor" readonly="1"/>
							<field name="is_patient" readonly="1"/>
							<field name="state_id"/>
							<field name="phone"/>
							<field name="email"/>
						</group>
					</group>
					<notebook>
						<page name="patient_data" string="Patient Data">
							<tree>
								<field name="patient_data_ids"/>
							</tree>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_doctor">
		<field name="name">Doctor</field>
		<field name="res_model">doctor.doctor</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'default_is_doctor':True}</field>
	</record>

	<menuitem id="menu_doctor" name="Hospital Data"/>
	
	<menuitem 
		id="menu_doctor_doctor"
		name="Doctor" 
		parent="menu_doctor"
		action="action_doctor" />
</odoo>