<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="patient_data_tree_view" model="ir.ui.view" >
		<field name="name">patient.data.tree.view</field> 
		<field name="model">patient.data</field> 
		<field name="arch" type="xml">
			<tree>
				<field name="date"/>
				<field name="patient_id"/>
				<field name="sale_order_id"/>
				<field name="doctor_id"/>
			</tree>
		</field>
	</record>
	
	<record id="patient_data_form_view" model="ir.ui.view">
		<field name="name">patient.data.form.view</field>
		<field name="model">patient.data</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="date"/>
							<field name="patient_id"/>
							<field name="sale_order_id"/>
							<field name="doctor_id"/>
						</group>
					</group>
					<notebook>
						<page name="patient_data" string="Patient Data Line">
							<field name="patient_data_line_ids">
								<tree>
									<field name="product_id"/>
									<field name="name"/>
									<field name="product_uom_qty"/>
									<field name="price_unit"/>
									<field name="price_subtotal"/>
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    <field name="activity_ids" widget="mail_activity"/>
                </div>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_patient_data">
		<field name="name">Patient Data</field>
		<field name="res_model">patient.data</field>
		<field name="view_mode">tree,form</field>
	</record>


	<menuitem 
		id="menu_patient_data"
		name="Patient Data" 
		parent="menu_doctor"
		action="action_patient_data"/>
	
</odoo>